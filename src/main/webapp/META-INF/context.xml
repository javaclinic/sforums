<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Context [ ]>
<Context>
  <!-- java:comp/env/jdbc/sforums -> java:jdbc/sforums -->
  <ResourceLink name="jdbc/sforums" global="jdbc/sforums"/>
  <Realm
  	className="org.apache.catalina.realm.DataSourceRealm"
    dataSourceName="jdbc/sforums"
    userTable="user"
    userNameCol="email"
    userCredCol="passwordDigest"
    userRoleTable="role"
    roleNameCol="role"
    digest="MD5"
  />
</Context>