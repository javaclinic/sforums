<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd
    "
>

    <mvc:annotation-driven />

    <context:component-scan base-package="com.marakana.sforums.web" />

    <bean id="handlerMapping" class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping">
        <property name="alwaysUseFullPath" value="true" />
    </bean>

    <bean id="jspViewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView" />
        <property name="prefix" value="/WEB-INF/jsp/" />
        <property name="suffix" value=".jsp" />
    </bean>

    <mvc:view-controller path="/home.html" view-name="home" />
    <mvc:view-controller path="/login.html" view-name="login" />
    <mvc:view-controller path="/access_denied.html" view-name="accessDenied" />

    <mvc:interceptors>
        <bean class="com.marakana.sforums.web.UserContextInterceptor" />
    </mvc:interceptors>

    <bean name="/categories.html" class="com.marakana.sforums.web.IdentifiableEntityListController">
        <property name="dao" ref="categoryDao" />
        <property name="viewName" value="categoryList" />
    </bean>

    <bean name="/category.html" class="com.marakana.sforums.web.IdentifiableEntityGetController">
        <property name="dao" ref="categoryDao" />
        <property name="viewName" value="categoryView" />
    </bean>

    <bean name="/category_delete.html" class="com.marakana.sforums.web.IdentifiableEntityDeleteController">
        <property name="dao" ref="categoryDao" />
    </bean>

    <bean name="/users.html" class="com.marakana.sforums.web.IdentifiableEntityListController">
        <property name="dao" ref="userDao" />
        <property name="viewName" value="userList" />
    </bean>

    <bean name="/user.html" class="com.marakana.sforums.web.IdentifiableEntityGetController">
        <property name="dao" ref="userDao" />
        <property name="viewName" value="userView" />
    </bean>

    <bean name="/user_delete.html" class="com.marakana.sforums.web.IdentifiableEntityDeleteController">
        <property name="dao" ref="userDao" />
    </bean>

    <bean id="exceptionResolver" class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
        <property name="exceptionMappings">
            <props>
                <prop key="org.springframework.dao.DataAccessException">dataAccessError</prop>
                <prop key="org.springframework.transaction.TransactionException">dataAccessError</prop>
            </props>
        </property>
    </bean>

</beans>